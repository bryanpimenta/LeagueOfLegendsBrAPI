{
  "ConnectionStrings": {
    "LeagueOfLegendsDatabase": "Server=db;Database=LeagueOfLegendsDataBase;User=root;Password={0};"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IpRateLimiting": {
    "EnableRateLimiting": true,
    "StackBlockedRequests": true,
    "RealIpHeader": "X-Real-IP",
    "IpWhitelist": [ "127.0.0.1" ],
    "EndpointWhitelist": [ "get:/api/status" ],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "*",
        "Period": "5m",
        "Limit": 100
      }
    ]
  }
}
